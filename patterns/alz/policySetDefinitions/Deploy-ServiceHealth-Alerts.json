{
  "type": "Microsoft.Authorization/policySetDefinitions",
  "apiVersion": "2021-06-01",
  "name": "Alerting-ServiceHealth",
  "properties": {
    "displayName": "Deploy Azure Monitor Baseline Alerts for Service Health",
    "description": "Initiative to deploy AMBA Service Health alerts to Azure services",
    "metadata": {
      "version": "1.1.0",
      "category": "Monitoring",
      "source": "https://github.com/Azure/azure-monitor-baseline-alerts/",
      "alzCloudEnvironments": [
        "AzureCloud"
      ],
      "_deployed_by_amba": true
    },
    "parameters": {
      "ALZMonitorResourceGroupName": {
        "type": "String",
        "defaultValue": "ALZ-Monitoring-RG",
        "metadata": {
          "displayName": "Resource Group Name",
          "description": "Name of the resource group to deploy the alerts to"
        }
      },
      "ALZMonitorResourceGroupTags": {
        "type": "Object",
        "defaultValue": {
          "_deployed_by_alz_monitor": true
        },
        "metadata": {
          "displayName": "Resource Group Tags",
          "description": "Tags to apply to the resource group"
        }
      },
      "ALZMonitorResourceGroupLocation": {
        "type": "String",
        "defaultValue": "centralus",
        "metadata": {
          "displayName": "Resource Group Location",
          "description": "Location of the resource group"
        }
      },
      "ResHlthUnhealthyAlertState": {
        "type": "string",
        "defaultValue": "true",
        "metadata": {
          "displayName": "Resource Health Unhealthy Alert State",
          "description": "State of the Resource Health Unhealthy alert"
        }
      },
      "SvcHlthAdvisoryAlertState": {
        "type": "string",
        "defaultValue": "true",
        "metadata": {
          "displayName": "Service Health Advisory Alert State",
          "description": "State of the Service Health Advisory alert"
        }
      },
      "SvcHlthIncidentAlertState": {
        "type": "string",
        "defaultValue": "true",
        "metadata": {
          "displayName": "Service Health Incident Alert State",
          "description": "State of the Service Health Incident alert"
        }
      },
      "SvcHlthMaintenanceAlertState": {
        "type": "string",
        "defaultValue": "true",
        "metadata": {
          "displayName": "Service Health Maintenance Alert State",
          "description": "State of the Service Health Maintenance alert"
        }
      },
      "svcHlthSecAdvisoryAlertState": {
        "type": "string",
        "defaultValue": "true",
        "metadata": {
          "displayName": "Service Health Security Advisory Alert State",
          "description": "State of the Service Health Security Advisory alert"
        }
      },
      "ALZMonitorActionGroupEmail": {
        "type": "string",
        "defaultValue": "action@mail.com",
        "metadata": {
          "displayName": "Action Group Email",
          "description": "Email address to send alerts to"
        }
      },
      "MonitorDisable": {
        "type": "string",
        "defaultValue": "MonitorDisable",
        "metadata": {
          "displayName": "Monitor Disable",
          "description": "Disable the Monitor"
        }
      },
      "ResourceHealthLogAlertSeverity": {
        "type": "String",
        "defaultValue": "1",
        "allowedValues": [
          "0",
          "1",
          "2",
          "3",
          "4"
        ],
        "metadata": {
          "displayName": "Resource Health Alert Severity",
          "description": "Severity of the alert for Resource Health"
        }
      },
      "ResourceHealthLogWindowSize": {
        "type": "string",
        "defaultValue": "PT15M",
        "allowedValues": [
          "PT1M",
          "PT5M",
          "PT15M",
          "PT30M",
          "PT1H",
          "PT6H",
          "PT12H",
          "P1D"
        ],
        "metadata": {
          "displayName": "Resource Health Window Size",
          "description": "Window size for the alert"
        }
      },
      "ResourceHealthLogEvaluationFrequency": {
        "type": "string",
        "defaultValue": "PT5M",
        "allowedValues": [
          "PT1M",
          "PT5M",
          "PT15M",
          "PT30M",
          "PT1H"
        ],
        "metadata": {
          "displayName": "Resource Health Evaluation Frequency",
          "description": "Evaluation frequency for the alert"
        }
      },
      "ResourceHealthLogAutoMitigate": {
        "type": "string",
        "defaultValue": "true",
        "metadata": {
          "displayName": "Resource Health Auto Mitigate",
          "description": "Auto Mitigate for the alert"
        }
      },
      "ResourceHealthLogAutoResolve": {
        "type": "string",
        "defaultValue": "true",
        "metadata": {
          "displayName": "Resource Health Auto Resolve",
          "description": "Auto Resolve for the alert"
        }
      },
      "ResourceHealthLogAutoResolveTime": {
        "type": "string",
        "defaultValue": "00:10:00",
        "metadata": {
          "displayName": "Resource Health Auto Resolve Time",
          "description": "Auto Resolve Time for the alert"
        }
      },
      "ResourceHealthLogPolicyEffect": {
        "type": "string",
        "defaultValue": "deployIfNotExists",
        "allowedValues": [
          "deployIfNotExists",
          "disabled"
        ],
        "metadata": {
          "displayName": "Resource Health Policy Effect",
          "description": "Policy effect for the alert, deployIfNotExists will deploy the alert if it does not exist"
        }
      },
      "ResourceHealthLogAlertState": {
        "type": "string",
        "defaultValue": "true",
        "metadata": {
          "displayName": "Resource Health Alert State",
          "description": "Alert state for the alert"
        }
      },
      "ResourceHealthLogThreshold": {
        "type": "string",
        "defaultValue": "0",
        "metadata": {
          "displayName": "Resource Health Threshold",
          "description": "Threshold for the alert"
        }
      },
      "ResourceHealthLogOperator": {
        "type": "string",
        "defaultValue": "GreaterThan",
        "allowedValues": [
          "Equals",
          "GreaterThan",
          "GreaterThanOrEqual",
          "LessThan",
          "LessThanOrEqual"
        ],
        "metadata": {
          "displayName": "Resource Health Operator",
          "description": "Operator for the alert"
        }
      },
      "ResourceHealthLogTimeAggregation": {
        "type": "string",
        "defaultValue": "Count",
        "allowedValues": [
          "Average",
          "Count",
          "Maximum",
          "Minimum",
          "Total"
        ],
        "metadata": {
          "displayName": "Resource Health Time Aggregation",
          "description": "Time Aggregation for the alert"
        }
      },
      "resourceGraphIdentityId": {
        "type": "string",
        "defaultValue": "placeholder",
        "metadata": {
          "displayName": "User Assigned Identity ID",
          "description": "The full resource ID of the User Assigned Identity to be used on the alerts. This is the central identity ID that is used for authentication to Azure Resource Graph."
        }
      }
    },
    "policyDefinitions": [
      {
        "policyDefinitionReferenceId": "ALZ_ResHlthUnhealthy",
        "policyDefinitionId": "[concat('/providers/Microsoft.Management/managementGroups/',managementGroup().name, '/providers/Microsoft.Authorization/policyDefinitions/Deploy_activitylog_ResourceHealth_Unhealthy_Alert')]",
        "parameters": {
          "enabled": {
            "value": "[[parameters('ResHlthUnhealthyAlertState')]"
          },
          "alertResourceGroupName": {
            "value": "[[parameters('ALZMonitorResourceGroupName')]"
          },
          "alertResourceGroupTags": {
            "value": "[[parameters('ALZMonitorResourceGroupTags')]"
          },
          "alertResourceGroupLocation": {
            "value": "[[parameters('ALZMonitorResourceGroupLocation')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "ALZ_SvcHlthAdvisory",
        "policyDefinitionId": "[concat('/providers/Microsoft.Management/managementGroups/',managementGroup().name, '/providers/Microsoft.Authorization/policyDefinitions/Deploy_activitylog_ServiceHealth_HealthAdvisory')]",
        "parameters": {
          "enabled": {
            "value": "[[parameters('SvcHlthAdvisoryAlertState')]"
          },
          "alertResourceGroupName": {
            "value": "[[parameters('ALZMonitorResourceGroupName')]"
          },
          "alertResourceGroupTags": {
            "value": "[[parameters('ALZMonitorResourceGroupTags')]"
          },
          "alertResourceGroupLocation": {
            "value": "[[parameters('ALZMonitorResourceGroupLocation')]"
          },
          "ALZMonitorActionGroupEmail": {
            "value": "[[parameters('ALZMonitorActionGroupEmail')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "ALZ_SvcHlthIncident",
        "policyDefinitionId": "[concat('/providers/Microsoft.Management/managementGroups/',managementGroup().name, '/providers/Microsoft.Authorization/policyDefinitions/Deploy_activitylog_ServiceHealth_Incident')]",
        "parameters": {
          "enabled": {
            "value": "[[parameters('SvcHlthIncidentAlertState')]"
          },
          "alertResourceGroupName": {
            "value": "[[parameters('ALZMonitorResourceGroupName')]"
          },
          "alertResourceGroupTags": {
            "value": "[[parameters('ALZMonitorResourceGroupTags')]"
          },
          "alertResourceGroupLocation": {
            "value": "[[parameters('ALZMonitorResourceGroupLocation')]"
          },
          "ALZMonitorActionGroupEmail": {
            "value": "[[parameters('ALZMonitorActionGroupEmail')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "ALZ_SvcHlthMaintenance",
        "policyDefinitionId": "[concat('/providers/Microsoft.Management/managementGroups/',managementGroup().name, '/providers/Microsoft.Authorization/policyDefinitions/Deploy_activitylog_ServiceHealth_Maintenance')]",
        "parameters": {
          "enabled": {
            "value": "[[parameters('SvcHlthMaintenanceAlertState')]"
          },
          "alertResourceGroupName": {
            "value": "[[parameters('ALZMonitorResourceGroupName')]"
          },
          "alertResourceGroupTags": {
            "value": "[[parameters('ALZMonitorResourceGroupTags')]"
          },
          "alertResourceGroupLocation": {
            "value": "[[parameters('ALZMonitorResourceGroupLocation')]"
          },
          "ALZMonitorActionGroupEmail": {
            "value": "[[parameters('ALZMonitorActionGroupEmail')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "ALZ_svcHlthSecAdvisory",
        "policyDefinitionId": "[concat('/providers/Microsoft.Management/managementGroups/',managementGroup().name, '/providers/Microsoft.Authorization/policyDefinitions/Deploy_activitylog_ServiceHealth_SecurityAdvisory')]",
        "parameters": {
          "enabled": {
            "value": "[[parameters('svcHlthSecAdvisoryAlertState')]"
          },
          "alertResourceGroupName": {
            "value": "[[parameters('ALZMonitorResourceGroupName')]"
          },
          "alertResourceGroupTags": {
            "value": "[[parameters('ALZMonitorResourceGroupTags')]"
          },
          "alertResourceGroupLocation": {
            "value": "[[parameters('ALZMonitorResourceGroupLocation')]"
          },
          "ALZMonitorActionGroupEmail": {
            "value": "[[parameters('ALZMonitorActionGroupEmail')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "ALZ_AlertProcessing_Rule",
        "policyDefinitionId": "[concat('/providers/Microsoft.Management/managementGroups/',managementGroup().name, '/providers/Microsoft.Authorization/policyDefinitions/Deploy_AlertProcessing_Rule')]",
        "parameters": {
          "ALZMonitorResourceGroupName": {
            "value": "[[parameters('ALZMonitorResourceGroupName')]"
          },
          "ALZMonitorResourceGroupTags": {
            "value": "[[parameters('ALZMonitorResourceGroupTags')]"
          },
          "ALZMonitorResourceGroupLocation": {
            "value": "[[parameters('ALZMonitorResourceGroupLocation')]"
          },
          "ALZMonitorActionGroupEmail": {
            "value": "[[parameters('ALZMonitorActionGroupEmail')]"
          },
          "MonitorDisable": {
            "value": "[[parameters('MonitorDisable')]"
          }
        }
      },
      {
        "policyDefinitionReferenceId": "ALZ_ResourceHealthLog",
        "policyDefinitionId": "[concat('/providers/Microsoft.Management/managementGroups/',managementGroup().name, '/providers/Microsoft.Authorization/policyDefinitions/Deploy_logQuery_ResourceHealth_Unhealthy_Alert')]",
        "parameters": {
          "alertResourceGroupName": {
            "value": "[[parameters('ALZMonitorResourceGroupName')]"
          },
          "alertResourceGroupTags": {
            "value": "[[parameters('ALZMonitorResourceGroupTags')]"
          },
          "alertResourceGroupLocation": {
            "value": "[[parameters('ALZMonitorResourceGroupLocation')]"
          },
          "severity": {
            "value": "[[parameters('ResourceHealthLogAlertSeverity')]"
          },
          "windowSize": {
            "value": "[[parameters('ResourceHealthLogWindowSize')]"
          },
          "evaluationFrequency": {
            "value": "[[parameters('ResourceHealthLogEvaluationFrequency')]"
          },
          "autoMitigate": {
            "value": "[[parameters('ResourceHealthLogAutoMitigate')]"
          },
          "autoResolve": {
            "value": "[[parameters('ResourceHealthLogAutoResolve')]"
          },
          "autoResolveTime": {
            "value": "[[parameters('ResourceHealthLogAutoResolveTime')]"
          },
          "effect": {
            "value": "[[parameters('ResourceHealthLogPolicyEffect')]"
          },
          "enabled": {
            "value": "[[parameters('ResourceHealthLogAlertState')]"
          },
          "threshold": {
            "value": "[[parameters('ResourceHealthLogThreshold')]"
          },
          "operator": {
            "value": "[[parameters('ResourceHealthLogOperator')]"
          },
          "timeAggregation": {
            "value": "[[parameters('ResourceHealthLogTimeAggregation')]"
          },
          "resourceGraphIdentityId": {
            "value": "[[parameters('resourceGraphIdentityId')]"
          }
        }
      },
    ],
    "policyType": "Custom",
    "policyDefinitionGroups": null
  }
}
